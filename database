
# CREATE QUERIES FOR: APPLICATION/ADMISSION, REGISTRATION/PROMOTION AND ASSIGNMENT, GRADING, SCHEDULING

CREATE TABLE R_CURRICULUM
(
	C_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    C_NAME VARCHAR(100) NOT NULL
);


CREATE TABLE  R_SCHOOL_YEAR (

    	SY_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    START VARCHAR(100),
    END VARCHAR(100),
    SY_STATUS VARCHAR(100),
    CURRICULUM_FK INT NOT NULL,
    FOREIGN KEY (CURRICULUM_FK) REFERENCES R_CURRICULUM (C_ID)
);

CREATE TABLE R_GRADE_LEVEL (
GL_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    L_NAME VARCHAR(100) NOT NULL,
    CURRICULUM_FK INT NOT NULL,
    FOREIGN KEY (CURRICULUM_FK)  REFERENCES R_CURRICULUM(C_ID)
);


CREATE TABLE R_TRANSACTION_DATE(
	TD_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    START DATE NOT NULL,
    END DATE NOT NULL,
    DESCRIPT VARCHAR(1000) NOT NULL
);

CREATE TABLE T_APPLICATION
(
	A_ID INT PRIMARY KEY AUTO_INCREMENT  NOT NULL,
	A_DATE DATE NOT NULL,
   
   
    A_STATUS VARCHAR(100) DEFAULT 'Pending',
    LRN VARCHAR(100),
    FNAME VARCHAR(100) NOT  NULL,
    MNAME VARCHAR(100),
    LNAME VARCHAR(100),
    BDATE VARCHAR(100) NOT NULL,
    SEX VARCHAR(100) NOT NULL,
    MTONGUE VARCHAR(100) NOT NULL,
    IP VARCHAR(100) ,
    RELIGION VARCHAR(100),
    CONTACT VARCHAR(100) NOT NULL,
    PBIRTH VARCHAR(100),
    STREET VARCHAR(100),
    BRGY VARCHAR(100),
    MUNICIPAL VARCHAR(100),
    CITY VARCHAR(100) NOT NULL,
    
    MARITAL VARCHAR(100),
    NATIONALITY VARCHAR(100) NOT NULL,
    EMAIL VARCHAR(100) NOT NULL,
    MOTHER VARCHAR(100),
    MOTHER_PHONE VARCHAR(100),
    MOTHER_OCCU VARCHAR(100),
    FATHER VARCHAR(100),
    FATHER_PHONE VARCHAR(100),
    FATHER_OCCU VARCHAR(100),
    GUARD VARCHAR(100) NOT NULL,
    GUARD_REL VARCHAR(100) NOT NULL,
    GUARD_CONTACT VARCHAR(100) NOT NULL,
    PREV_SCHOOL VARCHAR(100),
    GWA NUMERIC,
    PREV_GRADE_LEVEL INT,
    FOREIGN KEY (PREV_GRADE_LEVEL) REFERENCES R_GRADE_LEVEL(GL_ID),
    REQ_NSO BIT DEFAULT 0 NOT NULL,
    REQ_PIC BIT DEFAULT 0 NOT NULL,
    REQ_EXAM BIT DEFAULT 0 NOT NULL,
    REQ_F137 BIT DEFAULT 0,
    REQ_GMC BIT DEFAULT 0 NOT NULL,
    REQ_CERT BIT DEFAULT 0 NOT NULL,
    DELETE_FLAG BIT DEFAULT 0
);

CREATE TABLE R_LEARNER_STATUS
(
	LS_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    LEARNER_FK INT NOT NULL,
    FOREIGN KEY (LEARNER_FK) REFERENCES T_APPLICATION (A_ID)
);


CREATE TABLE R_LEARNER
(
	L_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    LEARNER_FK INT NOT NULL,
    FOREIGN KEY (LEARNER_FK) REFERENCES T_APPLICATION(A_ID),
    USERNAME VARCHAR(100) NOT NULL,
    PASS VARCHAR(100) NOT NULL
);

CREATE TABLE R_SECTION

(
	S_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    ACADLEVEL_FK INT NOT NULL,
    FOREIGN KEY (ACADLEVEL_FK) REFERENCES R_GRADE_LEVEL (GL_ID),
    SECTION_NAME VARCHAR(100),
    T_FK INT NOT NULL,
    FOREIGN KEY (T_FK) REFERENCES R_TEACHER (T_ID)
);

CREATE TABLE R_SECTION_CLASS_DETAILS
(
	SD_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    SECTION_FK INT NOT NULL,
    LEARNER_FK INT NOT NULL,
    FOREIGN KEY (SECTION_FK) REFERENCES R_SECTION (S_ID),
    FOREIGN KEY (LEARNER_FK) REFERENCES T_APPLICATION (A_ID),
    SY_FK INT NOT NULL,
    FOREIGN KEY (SY_FK) REFERENCES R_SCHOOL_YEAR (SY_ID)
    
);

CREATE TABLE R_POLICY
(
	P_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    DESCRIPT VARCHAR(10000) NOT NULL
);


CREATE TABLE R_SUBJECT 
(
	SUB_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    ACADLEVEL_FK INT NOT NULL,
    FOREIGN KEY (ACADLEVEL_FK) REFERENCES R_GRADE_LEVEL (GL_ID),
    SUBJECT_NAME VARCHAR(100)
);

create table r_teacher
(
	T_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    T_NAME VARCHAR(100) NOT NULL,
    SUBJECT_DEPT VARCHAR(100),
    T_UID VARCHAR(100),
    T_PASS VARCHAR(100)
);

CREATE TABLE R_ACC_PRINCIPAL
(
	PRIN_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    PRIN_NAME VARCHAR(100) NOT NULL,
    PRIN_UID VARCHAR(100) NOT NULL,
    UNIQUE (PRIN_UID),
    PRIN_PASS VARCHAR(100)
);

CREATE TABLE R_ACC_REGISTRAR
(
	R_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    R_UID VARCHAR(100),
    R_PASS VARCHAR(100),
    R_NAME VARCHAR(100) NOT NULL
);

CREATE TABLE R_ACC_ADMIN
(
	ADMIN_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    ADMIN_UID VARCHAR(100),
    ADMIN_PASS VARCHAR(100),
    ADMIN_NAME VARCHAR (100) NOT NULL
);

CREATE TABLE R_BUILDING
(
	BLDG_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    BLDG_NAME VARCHAR(100) NOT NULL   
);

CREATE TABLE R_BUILDING_FLOOR
(
	FLR_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    FLR_NAME VARCHAR(100) NOT NULL   
);

CREATE TABLE R_BUILDING_ROOM
(
	ROOM_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    ROOM_NAME VARCHAR(100) NOT NULL   
);

CREATE TABLE R_CLASSROOM
(
	CR_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    CR_NAME VARCHAR(100),
    BLDG_FK INT NOT NULL,
    FLOOR_FK INT NOT NULL,
    ROOM_FK INT NOT NULL,
    FOREIGN KEY (BLDG_FK) REFERENCES R_BUILDING(BLDG_ID),
    FOREIGN KEY (FLOOR_FK) REFERENCES R_BUILDING_FLOOR(FLR_ID),
    FOREIGN KEY (ROOM_FK) REFERENCES R_BUILDING_ROOM (ROOM_ID)
);


CREATE TABLE R_QUARTER
(
	Q_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    Q_DESC VARCHAR(100) NOT NULL,
    Q_STATUS VARCHAR(100) DEFAULT 'Inactive'
);



CREATE TABLE T_GRADE
(
	G_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    LEARNER_FK INT NOT NULL,
    SUBJECT_FK INT NOT NULL,
    Q_FK INT NOT NULL,
    SY_FK INT NOT NULL,
    G_GRADE NUMERIC NOT NULL,
    FOREIGN KEY (LEARNER_FK) REFERENCES T_APPLICATION (A_ID),
    FOREIGN KEY (SUBJECT_FK) REFERENCES R_SUBJECT(SUB_ID),
    FOREIGN KEY (Q_FK) REFERENCES R_QUARTER (Q_ID),
    FOREIGN KEY (SY_FK) REFERENCES R_SCHOOL_YEAR (SY_ID),
    G_REMARK VARCHAR(100) NOT NULL

);


CREATE TABLE R_ANNOUNCEMENT
(
	ANN_ID INT PRIMARY KEY AUTO_INCREMENT NOT NULL,
    ANN_USERTYPE VARCHAR(100) NOT NULL,
    ANN_SUBJECT VARCHAR(100),
    ANN_DATE DATE NOT NULL,
    DELETE_FLAG BIT DEFAULT 0
);








